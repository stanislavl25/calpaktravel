    {%- endif -%}
    <div class="promotion-banner__content" {% if section.settings.font_size_main_text != " blank" %}style="font-size:{{ section.settings.font_size_main_text }}px"{% endif %}>
      {{- section.settings.mobile-main-text -}}
    </div>
    {% if section.settings.terms_text_mobile %}
      <a
        title="click to go to to terms and conditions"
