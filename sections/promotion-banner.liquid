{%- if section.settings.preload -%}
  {{ 'section-promotion-banner.css' | asset_url | stylesheet_tag: preload: true }}
{%- else -%}
  {{ 'section-promotion-banner.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{% if template == 'product' %}
  {% for product_item in section.settings.product_list %}
    {% if product_item.handle == product.handle %}
      <style>
        .promotion-banner__section[data-id="{{ section.id }}"] {
          display: flex;
        }
      </style>
    {% endif %}
  {% endfor %}
{% endif %}

{% if template == 'collection' %}
  {% for collection_item in section.settings.collection_list %}
    {% if collection_item.handle == collection.handle %}
      <style>
        .promotion-banner__section[data-id="{{ section.id }}"] {
          display: flex;
        }
      </style>
    {% endif %}
  {% endfor %}
{% endif %}


{% if section.settings.cta_link == 'none' %}
  <section
    id="{{ section.settings.section-id }}"
    data-id="{{ section.id }}"
    class="show-desktop promotion-banner__section{% if section.settings.hide %} promotion-banner__section--hidden{% endif %}">
    {%- if section.settings.title-above != blank -%}
      <h2 class="promotion-banner__title">{{- section.settings.title-above | escape -}}</h2>
    {%- endif -%}
    <div class="promotion-banner__content">
      {{- section.settings.main-text -}}
    </div>
    {% if section.settings.terms_text %}
      <a
        title="click to go to to terms and conditions"
        aria-label="click to go to terms and conditions"
        href="{{ section.settings.terms_url }}"
        target="_blank"
        class="promotion-banner__terms">{{ section.settings.terms_text }}</a>
    {% endif %}
  </section>
{% elsif section.settings.cta_link == 'wrap' %}
  <a class="show-desktop promotion-banner__link" href="{{ section.settings.cta_url }}">
    <section
      id="{{ section.settings.section-id }}"
      data-id="{{ section.id }}"
      class="show-desktop promotion-banner__section{% if section.settings.hide %} promotion-banner__section--hidden{% endif %}">
      {%- if section.settings.title-above != blank -%}
        <h2 class="promotion-banner__title">{{- section.settings.title-above | escape -}}</h2>
      {%- endif -%}
      <div class="promotion-banner__content">
        {{- section.settings.main-text -}}
      </div>
      {% if section.settings.terms_text %}
        <a
          title="click to go to to terms and conditions"
          aria-label="click to go to terms and conditions"
          href="{{ section.settings.terms_url }}"
          target="_blank"
          class="promotion-banner__terms">{{ section.settings.terms_text }}</a>
      {% endif %}

    </section>
  </a>
{% elsif section.settings.cta_link == 'cta' %}
  <section
    id="{{ section.settings.section-id }}"
    data-id="{{ section.id }}"
    class="show-desktop promotion-banner__section{% if section.settings.hide %} promotion-banner__section--hidden{% endif %}">
    {%- if section.settings.title-above != blank -%}
      <h2 class="promotion-banner__title">{{- section.settings.title-above | escape -}}</h2>
    {%- endif -%}
    <div class="promotion-banner__content">
      {{- section.settings.main-text -}}
    </div>
    {% if section.settings.terms_text %}
      <a
        title="click to go to to terms and conditions"
        aria-label="click to go to terms and conditions"
        href="{{ section.settings.terms_url }}"
        target="_blank"
        class="promotion-banner__terms">{{ section.settings.terms_text }}</a>
    {% endif %}
    <span
      class="button button--secondary promotion-banner__cta"
      onclick="promotionCTAHandler('{{ section.settings.cta_url }}');"
      style="
                                                                                                                              background: {{ section.settings.cta_background }};
                                                                                                                              color: {{ section.settings.cta_color }};"
      href="{{ section.settings.cta_url }}"
      title="click to go to promotion"
      aria-label="click to go to promotion">
      <span>{{ section.settings.cta_text }}</span>
    </span>
  </section>
{% endif %}

{% comment %}Content will load in mobile{% endcomment %}
