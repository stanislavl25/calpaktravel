{{ 'section-reviews.css' | asset_url | stylesheet_tag }}

<link rel="stylesheet" href="{{ 'component-star-rating.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-star-rating.css' | asset_url | stylesheet_tag }}</noscript>
{% assign count = 0 %}
{% for block in section.blocks %}
    {% assign count = count | plus: 1 %}
{% endfor %}
{% if section.blocks.size > 0 %}

<div class="slider__wrapper--reviews slider__wrapper slider__wrapper--start" role="region" aria-label="Quotes carousel" tabindex="0">
<span class="sr-only">This is a carousel with rotating slides. Use Next button to play or pause the auto-rotation, or jump to a slide with the slide dots.</span>
<button class="play-pause-reviews" aria-label="Pause slider">&#10074;&#10074;<span class="visually-hidden">Pause slide rotation</span></button>
    <div class="reviews__slide-spacer">
        {%- for block in section.blocks -%}
        <div class="reviews__slide">
            {%- if forloop.first -%}
                {% render 'review-content' with block as block %}
            {%- else -%}
                {% render 'review-content' with block as block, no_wrapper: true %}
            {%- endif -%}
        </div>
        {%- endfor -%}
    </div>
    <ul class="slider__dots">
        {%- for block in section.blocks -%}
        <li class="slider__dot" aria-label="Go to slide {{ forloop.index }}" aria-current="{% if forloop.first %}true{% else %}false{% endif %}" tabindex="-1"></li>
        {%- endfor -%}
    </ul>
    <div class="reviews__slider slider slider--vertical-on-desktop" data-autoslide="4">
        {% for block in section.blocks %}
        <div role="group" class="reviews__slide slide {% if forloop.first %} reviews__slide--active{% endif %}" data-index="{{ forloop.index0 }}" aria-hidden="{% if forloop.first %}false{% else %}true{% endif %}" tabindex="{% if forloop.first %}0{% else %}-1{% endif %}" aria-label="Slide {{ forloop.index }} of {{count}}">
            {% render 'review-content' with block as block, no_wrapper: true %}
        </div>
        {% endfor %}
        <div class="reviews__slide slide">
            {% render 'review-content' with section.blocks[0] as block, no_wrapper: true %}
        </div>
    </div>
</div>
{% endif %}

{% schema %}
    {
        "name": "Reviews",
        "class": "shopify-section--reviews",
        "settings": [
            {
                "type": "range",
                "id": "autoslide",
                "min": 3,
                "max": 15,
                "step": 1,
                "unit": "sec",
                "label": "Autoslide timeout",
                "default": 5
            }
        ],
        "blocks": [
            {
                "type": "review",
                "name": "Review",
                "settings": [
                    {
                        "type": "text",
                        "id": "name",
                        "label": "Name"
                    },
                    {
                        "type": "richtext",
                        "id": "review",
                        "label": "Review text"
                    },
                    {
                        "type": "checkbox",
                        "id": "add-quotes",
                        "label": "Add Quotes",
                        "default": true
                    },
                    {
                        "type": "range",
                        "id": "stars",
                        "min": 3.5,
                        "max": 5,
                        "step": 0.1,
                        "label": "Stars",
                        "default": 5
                    },
                    {
                        "type": "text",
                        "id": "button-text",
                        "label": "Button Text"
                    },
                    {
                        "type": "url",
                        "id": "button-link",
                        "label": "Button Link"
                    },
                    {
                        "type": "header",
                        "content": "Pictured Product"
                    },
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    },
                    {
                        "type": "image_picker",
                        "id": "image-mobile",
                        "label": "Image for mobile"
                    },
                    {
                        "type": "url",
                        "id": "image-link",
                        "label": "Image link"
                    },
                    {
                        "type": "product",
                        "id": "pictured-product",
                        "label": "Pictured Product"
                    },
                    {
                        "type": "text",
                        "id": "pictured-product-title",
                        "label": "Product Title"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Reviews"
            }
        ]
    }
{% endschema %}