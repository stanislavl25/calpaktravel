{{ 'component-wishlist.css' | asset_url | stylesheet_tag: preoad: true }}

<script src="{{ 'wishlist.js' | asset_url }}" defer="defer"></script>

{% render 'wishlist' %}

{% schema %}
    {
        "name": "Wishlist",
        "class": "shopify-section--wishlist",
        "settings": [
            {
                "type": "collection",
                "id": "collection",
                "label": "Featured collection"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Collection heading"
            },
            {
                "type": "checkbox",
                "id": "quickview",
                "label": "Enable quick view for featured collection",
                "default": true
            }
        ]
    }
{% endschema %}