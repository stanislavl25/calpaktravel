{{ 'section-refer.css' | asset_url | stylesheet_tag: preload: true }}
{{ 'component-form.css' | asset_url | stylesheet_tag }}
{{ 'swell-rewards.css' | asset_url | stylesheet_tag }}

<script src="https://code.jquery.com/jquery-2.2.4.min.js" defer="defer"></script>
<script src="{{ 'swell-rewards.js' | asset_url }}" defer="defer"></script>

<div class="refer__form">
    <div class="swell-referral-main-content">
        <div class="swell-referral">
            <div class="swell-referral-content">
                <h2>{{ section.settings.title }}</h2>
                {{ section.settings.content }}
            </div>
            <div class="swell-referral-loader loading-animation loading-animation--alt"></div>
        </div>
    </div>
</div>
<div class="refer__content">
    {%- if section.settings.image != blank -%}
        {%- render 'image' with section.settings.image, sizes: '(min-width: 901px) 50vw, 100vw', preload: true -%}
    {%- endif -%}
</div>

{% schema %}
    {
        "name": "Page Refer",
        "class": "shopify-section--refer",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title",
                "default": "Give $25, Get $25"
            },
            {
                "type": "richtext",
                "id": "content",
                "label": "Content",
                "default": "<p>Send a friend $25 off their first qualifying CALPAK order ($150+), and you'll get $25 off your next order!</p>"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            }
        ]
    }
{% endschema %}