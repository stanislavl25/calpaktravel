        width: 50px;
        height: 40px;
        text-indent: -500px;
        overflow: hidden;
        margin-left: 35px;
        position: relative;

        &:hover {
            &::before,
            &::after {
                border-color: #000;
            }
        }

        &::before {
            height: 0;
            border-top: 1px solid #000;
            position: absolute;
            content: '';
            top: 50%;
            left: 1px;
            right: 1px;
            transform: translateY(-50%);
        }

        &::after {
            position: absolute;
            content: '';
            top: 50%;
            right: 0;
            width: 16px;
            height: 16px;
            border-style: solid;
            border-color: #000;
            border-width: 1px 1px 0 0;
            transform: rotate(45deg);
            transform-origin: top right;
        }

        &.scrolling-nav__prev::after {
            right: auto;
            left: 0;
            transform: rotate(-45deg);
            border-width: 1px 0 0 1px;
            transform-origin: top left;
        }
    }
