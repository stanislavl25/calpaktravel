<div class="star-rating">
    <div class="star-background">
        <img alt="Star Inactive" src="{{- 'icon-star-gray.svg' | asset_url -}}" class="star-icon" loading="lazy" width="11">
        <img alt="Star Inactive" src="{{- 'icon-star-gray.svg' | asset_url -}}" class="star-icon" loading="lazy" width="11">
        <img alt="Star Inactive" src="{{- 'icon-star-gray.svg' | asset_url -}}" class="star-icon" loading="lazy" width="11">
