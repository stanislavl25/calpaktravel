                    </div>
                </div> 
                <div class="col">
                    <div class="current-variant">
                        {% assign opt1 = bundle_product.option1 %}
                        {% render 'product-unit' with bundle_product, init_option1: opt1, all_colors_quickadd: true, all_colors: true, quick_add: false, class: 'slide', sizes: '(min-width: 901px) 20vw, (min-width: 651px) 33.333%, 43vw', add_to_cart: true %}
                    </div>
                </div> 
                <div class="mobile-button">
                    
                    <button id="bundle-button-mobile" class="button button--secondary button--bundle" type="button"><span class="button-text">Add Bundle to Bag - <span class="price">{{ current_variant.price | plus: bundle_product.price_max | money_without_trailing_zeros }}</span></span></button>
                </div>
            </div>
        </form>
    </section>
    <script src="{{ 'component-bundle.js' | asset_url }}" defer></script>
