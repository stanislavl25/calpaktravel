    {{ 'component-bundle.css' | asset_url | stylesheet_tag }}

    <section class="pdp-bundle hidden">
        <form id="bundle-form" method="post" action="/cart/add"  enctype="multipart/form-data">
        <div class="flex">
                <div class="col info-section">
                    <p>Make it a set</p>
                    <div class="bundle-price">
                        <span class="price">{{ current_variant.price | plus: bundle_product.price_max | money_without_trailing_zeros }}</span>
                    </div>
                    <button id="bundle-button" class="button button--secondary button--bundle" type="button"><span class="button-text">Add Bundle to Bag</span></button>
                </div> 
                <div class="col">
                    <div class="current-variant">
                        {% assign opt1 = current_variant.option1 %}
