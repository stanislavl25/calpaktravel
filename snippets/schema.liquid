{% assign logo = 'https://cdn.shopify.com/s/files/1/0941/4996/files/Logo_Horizontal_092da3cb-8f71-4799-b849-afbccca3ddcc.png' %}
<script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Website",
        "url": "{{ shop.url }}"
    }
</script>

<script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Store",
        "name": "{{ shop.name }}",
        "url": "{{ shop.url }}",
        "description": "{{ shop.description | replace: '"', '\"' }}",
        "logo": "{{ logo }}",
        "image": "{{ logo }}",
        "sameAs": ["https://www.facebook.com/calpaktravel/","https://www.instagram.com/calpak/","https://twitter.com/calpaktravel/","https://www.pinterest.com/CALPAKTRAVEL/"],
        "priceRange": "$$$",
        "address": {
            "@type": "PostalAddress",
            "streetAddress": "{{ shop.address.street }}",
            "addressLocality": "{{ shop.address.city }}",
            "addressRegion": "{{ shop.address.province }}",
            "postalCode": "{{ shop.address.zip }}",
            "addressCountry": "{{ shop.address.country }}"
        },
        "telephone": "{{ shop.phone }}"
    }
</script>

{% if template == 'blog' %}
<script type="application/ld+json">
    
    {
        "@context" : "http://schema.org",
        "@type" : "Blog",
        "about": "{% if page_description %}{{ page_description | replace: '"', '\"' }}{% else %}{{ shop.description | replace: '"', '\"' }}{% endif %}",
        "name": "{{ blog.title }}",
        "url": "{{ blog.url }}",
        "blogPosts": [
            {% for article in blog.articles %}
            {% unless forloop.first %},{% endunless %}
            {
                "@context" : "http://schema.org",
                "@type" : "BlogPosting",
                "headline" : "{{ article.title | replace: '"', '\"' }}",
                "mainEntityOfPage" : "{{ article.url }}",
                "image": {
                    "@type": "ImageObject",
                    "url": "{{ article.image | img_url: 'master' }}",
                    "width": {{ article.image.width }},
                    "height": {{ article.image.height }}
                },
                "url" : "{{ article.url }}",
                "datePublished": "{{ article.created_at }}",
                "dateModified" : "{{ article.updated_at }}",
                "dateCreated": "{{ article.published_at }}",
                
                "author": {
                    "image": "{{ logo }}",
                    {% if article.author == 'CALPAK' %}
                        "@type": "Store",
                            "logo": {
                                "@type": "ImageObject",
                                "url": "{{ logo }}"
                            },
                                            
                        "name": "{{ shop.name }}",
                        "priceRange": "$$$",
                        "address": {
                            "@type": "PostalAddress",
                            "streetAddress": "{{ shop.address.street }}",
                            "addressLocality": "{{ shop.address.city }}",
                            "addressRegion": "{{ shop.address.province }}",
                            "postalCode": "{{ shop.address.zip }}",
                            "addressCountry": "{{ shop.address.country }}"
                        },
                        "telephone": "{{ shop.phone }}",
                        "sameAs": ["https://www.facebook.com/calpaktravel/","https://www.instagram.com/calpak/","https://twitter.com/calpaktravel/","https://www.pinterest.com/CALPAKTRAVEL/"]
                    {% else %}
                        "@type": "Person",
                        "name": "{{ article.author }}"
                    {% endif %}
                },
                "publisher": {
                    "@type": "Organization",
                        "logo": {
                            "@type": "ImageObject",
                            "url": "{{ logo }}"
                        },
                                        
                    "name": "{{ shop.name }}"
                }
            }
            {% endfor %}
        ]
    }
</script>

<script type="application/ld+json">
    {
        "@context": "http://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
            {
                "@type": "ListItem",
                "position": 1,
                "item": {
                    "@type": "Website",
                    "@id": "{{ shop.url }}",
                    "name": "Home"
                }
            },
            {
                "@type": "ListItem",
                "position": 2,
                "item": {
                    "@type": "Blog",
                    "@id":  "{{ blog.url }}",
                    "name": "{{ blog.title }}"
                }
            }
        ]
    } 
</script>
