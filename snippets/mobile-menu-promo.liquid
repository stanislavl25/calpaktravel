{%- assign block = mobile-menu-promo -%}
<li class="slide-menu-item slide-menu-item--promo">
    {%- unless block.settings.link-for-button -%}
        <a href="{{- block.settings.link -}}">
    {%- endunless -%}
    <div class="mobile-menu__promo">
        <div class="mobile-menu__promo-image">
            {% render 'image' with block.settings.image, lazy: true, no_wrapper: true, sizes: '50vw' %}
        </div>
        <div class="mobile-menu__promo-title">
            {%- if block.settings.link-for-button -%}
            <a href="{{- block.settings.link -}}">{{- block.settings.button-text | escape -}}</a>
            {%- else -%}
            <span>{{- block.settings.button-text | escape -}}</span>
            {%- endif -%}
        </div>
    </div>
    {%- unless block.settings.link-for-button -%}
        </a>
    {%- endunless -%}
</li>