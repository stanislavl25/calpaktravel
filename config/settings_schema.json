[
  {
    "name": "theme_info",
    "theme_name": "Calpak",
    "theme_author": "Calpak",
    "theme_version": "3.0.1",
    "theme_documentation_url": "http:\/\/calpaktravel.com\/",
    "theme_support_email": "hello@calpaktravel.com"
  },
  {
    "name": "General Settings",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon"
      },
      {
        "type": "collection",
        "id": "best-sellers",
        "label": "Best Sellers collection",
        "info": "Must contain all products sorted by best selling"
      },
      {
        "type": "collection",
        "id": "new-arrivals",
        "label": "New Arrivals collection"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "range",
        "id": "free-shipping",
        "label": "Free Shipping starting from",
        "default": 75,
        "min": 0,
        "max": 300,
        "step": 5,
        "unit": "$"
      },
      {
        "type": "header",
        "content": "Save for later"
      },
      {
        "type": "checkbox",
        "id": "enable-save-for-later",
        "label": "Enable save for later",
        "default": true
      },
      {
        "type": "text",
        "id": "save-for-later-text",
        "label": "Save for later text",
        "default": "Save for later"
      },
      {
        "type": "checkbox",
        "id": "save-for-later-img",
        "label": "Show product image in the notification",
        "default": true
      }
    ]
  },
  {
    "name": "Wishlist",
    "settings": [
      {
        "type": "range",
        "label": "Wishlist popup timeout",
        "default": 3,
        "id": "wishlist-popup-timeout",
        "min": 1,
        "max": 10,
        "step": 1,
        "unit": "sec"
      }
    ]
  },
  {
    "name": "Preorder",
    "settings": [
      {
        "type": "color",
        "id": "preorder-highlight-col",
        "label": "Preorder highlight",
        "default": "#f7f177"
      },
      {
        "type": "color",
        "id": "preorder-highlight-t-col",
        "label": "Preorder highlight text",
        "default": "#000"
      },
      {
        "id": "preorder-text-full",
        "type": "text",
        "label": "Full text for preorder",
        "default": "Expected to ship"
      },
      {
        "id": "preorder-text-short",
        "type": "text",
        "label": "Short text for preorder",
        "default": "Ships"
      }
    ]
  },
  {
    "name": "Collections",
    "settings": [
      {
        "type": "color",
        "id": "product-unit-info-col",
        "label": "Additional info color",
        "default": "#707070"
      },
      {
        "type": "range",
        "id": "product-unit-sw-count",
        "min": 1,
        "max": 10,
        "step": 1,
        "default": 4,
        "label": "Swatches shown per product"
      }
    ]
  },
  {
    "name": "Sale",
    "settings": [
      {
        "type": "checkbox",
        "id": "sale-enabled",
